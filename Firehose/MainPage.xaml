<Page x:Class="Firehose.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:ui="using:Firehose.UI"
      xmlns:viewmodels="using:Firehose.Viewmodels"
      x:Name="MainPageXaml"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <utu:ResponsiveView Name="Display" DataContext="{x:Bind ShellVM}"
                      Loaded="Loaded">
    <utu:ResponsiveView.NormalTemplate>
      <DataTemplate>
        <Frame Content="{Binding Path=Content, Mode=TwoWay}"/>
      </DataTemplate>
    </utu:ResponsiveView.NormalTemplate>
    <utu:ResponsiveView.WidestTemplate>
      <DataTemplate>
        <SplitView>
          <SplitView>
            <SplitView.Pane>
              <ui:ArticleList/>
            </SplitView.Pane>
            <SplitView.Content>
              <Frame Content="{Binding Path=Content, Mode=TwoWay}"/>
            </SplitView.Content>
          </SplitView>
        </SplitView>
      </DataTemplate>
    </utu:ResponsiveView.WidestTemplate>
  </utu:ResponsiveView>
</Page>
